[bar/example]
width = 100%
height = 18pt
radius = 5

; dpi = 96


scroll-up = i3-msg workspace next_on_output
scroll-down = i3-msg workspace prev_on_output


background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1.5pt
line-color = #a61a1a


