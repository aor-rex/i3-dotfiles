[module/network]
type = internal/network
interface = wlan0
interface-type = wireless
interval = 1.0
accumulate-stats = true
unknown-as-up = true
speed-unit = B/s

; Colors
connected-color = #8be9fd
disconnected-color = #6272a4
signal-good = #50fa7b
signal-medium = #f1fa8c
signal-weak = #ffb86c
signal-bad = #ff5555

; Connected
format-connected = <ramp-signal> <label-connected>
label-connected = %essid% %downspeed:9%
label-connected-foreground = ${self.connected-color}
label-connected-padding = 0


; Disconnected
format-disconnected = <label-disconnected>
label-disconnected = Offline
label-disconnected-foreground = ${self.disconnected-color}


; Packet loss animation
format-packetloss = <animation-packetloss> <label-connected>
animation-packetloss-0 = âš 
animation-packetloss-1 = ğŸ“¶
animation-packetloss-framerate = 500

; Signal strength icons
ramp-signal-0 = ï‡«
ramp-signal-1 = ï‡«
ramp-signal-2 = ï‡«
ramp-signal-3 = ï‡«
ramp-signal-4 = ï‡«
ramp-signal-5 = ï‡«

ramp-signal-0-foreground = ${self.signal-bad}
ramp-signal-1-foreground = ${self.signal-weak}
ramp-signal-2-foreground = ${self.signal-medium}
ramp-signal-3-foreground = ${self.signal-good}
ramp-signal-4-foreground = ${self.signal-good}
ramp-signal-5-foreground = ${self.signal-good}


